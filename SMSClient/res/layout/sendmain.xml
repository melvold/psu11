<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<TextView 
	android:id="@+id/tv_empty"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
</TextView>
<ImageView
	android:src="@drawable/logo"
	android:adjustViewBounds="true"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:scaleType="centerInside"/>
<TextView 
	android:id="@+id/tv_empty"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content">

</TextView>
<Button
     android:id="@+id/send_nomember"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:text="Send til nummer"/>
<Button
     android:id="@+id/send_members"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:text="Send til selvvalgte"/>
<Button
     android:id="@+id/send_group"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:text="Send til gruppe"/>
<Button
     android:id="@+id/send_known"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:text="Ferdige meldinger"/>
</LinearLayout>